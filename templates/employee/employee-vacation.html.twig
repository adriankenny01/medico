{% extends 'base.html.twig' %}

{% block title %} Listado de trabajadores para tomar vacaciones {% endblock %}

{% block body %} 
   {% if employee_vacation %}
        <h2 class="mt-2 mb-4">Disponibilidad de vacaciones</h2>
        <table class="table table-stripedd data-show" id="employee_vacation">
            <thead>
                <tr>
                    <th>Nombre Completo</th>
                    <th>Tipo <small>(medico o empleado)</small></th>
                    <th>Fecha entrada</th>
                    <th>Dias ganados</th>
                    <th>Dias tomados </th>
                    <th>Dias restantes </th>
                    <th>Asignar</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ employee_vacation.fullName }}</td>
                    <td>Medico</td>
                    <td>{{ employee_vacation.dateStart }}</td>
                    <td>{{ vacationDays }}</td>
                    <td>{{ vacationTaken }}</td>
                    <td>{{ vacationDays - vacationTaken }}</td>
                    <td>
                    <a href="/vacation/assign/0/{{ employee_vacation.id }}" class="btn btn-info"><i class="fas fa-calendar"></i></a>
                    </td>
                    
                </tr> 
            </tbody>
        </table>
   {% else %}
        <p>No existen medicos activos</p>
   {% endif %}
{% endblock %} 

{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}
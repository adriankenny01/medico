{% extends 'base.html.twig' %}

{% block title %} Listado de Empleados {% endblock %}

{% block body %} 
    <h2 class="mt-2 mb-4">Empleados</h2>
    <a href="/employee/new/" class="btn btn-primary float-right mb-3">Nuevo</a>
   {% if employees %}

        {# <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Inicio</a></li>
            <li class="breadcrumb-item active">Empleado</li>
        </ol> #}

        <table class="table table-striped data-show" id="employees">
            <thead>
                <tr>
                    <th>Nombre Completo</th>
                    <th>Cedula</th>
                    <th>Direccion</th>
                    <th>Telefono</th>
                    <th>Provincia</th>
                    <th>Codigo Postal</th>
                    <th>NIF</th>
                    <th>Social Security</th>
                    <th>Tipo empleado</th>   
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for employee in employees %}
                   <tr>
                       <td>{{ employee.fullName }}</td>
                       <td>{{ employee.cardId }}</td>
                       <td>{{ employee.address }}</td>
                       <td>{{ employee.phone }}</td>
                       <td>{{ employee.province }}</td>
                       <td>{{ employee.zipCode }}</td>
                       <td>{{ employee.nif }}</td>
                       <td>{{ employee.socialSecurity }}</td>
                       <td>{{ employee.tipoEmpleado }}</td>
                       <td>{{ employee.state }}</td>
                       <td>
                        <a href="/employee/{{ employee.id }}" class="btn btn-dark"><i class="fas fa-eye"></i></a>
                       </td>
                       <td>
                        <a href="/employee/edit/{{ employee.id }}" class="btn btn-light"><i class="fas fa-edit"></i></a>
                       </td>
                       <td>
                        <a href="#" class="btn btn-danger delete-article" data-id="{{ employee.id }}"><i class="fas fa-trash-alt"></i></a>
                       </td>
                       <td>
                        <a href="/employee/vacation/{{ employee.id }}" class="btn btn-info"><i class="fas fa-calendar"></i></a>
                       </td>
                   </tr> 
                {% endfor %}
            </tbody>
        </table>
   {% else %}
    <div class="alert alert-dismissible alert-warning">
        {# <button type="button" class="close" data-dismiss="alert">&times;</button> #}
        <h4 class="alert-heading">Aviso</h4>
        <p class="mb-0">No Existen empleados actualmente</a>.</p>
    </div>
    <a href="/employee/new/" class="btn btn-primary float-right">Nuevo</a>
   {% endif %}
{% endblock %} 

{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}


{% extends 'base.html.twig' %}

{% block title %} Listado de Medicos {% endblock %}

{% block body %} 
<h2 class="mt-4 mb-4">Medicos</h2>
   {% if medics %}
        <table class="table table-striped data-show" id="medics">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Direccion</th>
                    <th>Telefono</th>
                    <th>Provincia</th>
                    {# <th>NIF</th> #}
                    {# <th>Social Security</th> #}
                    {# <th>Numero de colegiado</th> #}
                    <th>Grupo Medico</th>
                    {# <th>Dias de Consulta</th> #}
                    <th>Fecha Inicio</th>
                    {# <th>Fecha Fin</th> #}
                    {# <th>Foto</th> #}
                    <th>Especialidad</th>
                    {# <th>Estado</th> #}
                    <th>Ver</th>
                    <th>Editar</th>
                    <th>Eliminar</th>
                    <th>Vacaciones</th>
                </tr>
            </thead>
            <tbody>
                {% for medic in medics %}
                   <tr>
                       <td>{{ medic.name }}</td>
                       <td>{{ medic.last_name }}</td>
                       <td>{{ medic.address }}</td>
                       <td>{{ medic.phone }}</td>
                       <td>{{ medic.province }}</td>
                       {# <td>{{ medic.nif }}</td> #}
                       {# <td>{{ medic.social_security }}</td> #}
                       {# <td>{{ medic.number_of_collegiate }}</td> #}
                       <td>{{ medic.medic_group }}</td>
                       {# <td>{{ medic.days_of_consulting }}</td> #}
                       <td>{{ medic.date_start|date('Y-m-d')  }}</td>
                       {# <td>{{ medic.date_end|date('Y-m-d')  }}</td> #}
                       {# <td>{{ medic.image }}</td> #}
                       <td>{{ medic.category }}</td>
                       {# <td>{{ medic.state }}</td> #}
                       
                       <td>
                        <a href="/medic/{{ medic.id }}" class="btn btn-dark"><i class="fas fa-eye"></i></a>
                       </td>
                       <td>
                        <a href="/medic/edit/{{ medic.id }}" class="btn btn-light"><i class="fas fa-edit"></i></a>
                       </td>
                       <td>
                        <a href="#" class="btn btn-danger delete-article" data-id="{{ medic.id }}"><i class="fas fa-trash-alt"></i></a>
                       </td>
                       <td>
                        <a href="/medic/vacation/{{ medic.id }}" class="btn btn-info"><i class="fas fa-calendar"></i></a>
                       </td>
                   </tr> 
                {% endfor %}
            </tbody>
        </table>
   {% else %}
    <div class="alert alert-dismissible alert-warning">
        {# <button type="button" class="close" data-dismiss="alert">&times;</button> #}
        <h4 class="alert-heading">Aviso</h4>
        <p class="mb-0">No Existen medicos actualmente</a>.</p>
    </div>
    <a href="/medic/new/" class="btn btn-primary float-right">Crear</a>
   {% endif %}
{% endblock %} 

{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}


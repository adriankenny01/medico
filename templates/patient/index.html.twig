{% extends 'base.html.twig' %}

{% block title %} Listado de Pacientes {% endblock %}

{% block body %} 
<h2 class="mt-2 mb-4"> Pacientes</h2>
 <a href="/patient/new/" class="btn btn-primary float-right mb-3">Crear</a>
   {% if patients %}
        <table class="table table-striped data-show" id="patients">
            <thead>
                <tr>
                    <th>Nombre Completo</th>
                    <th>Cedula</th>
                    <th>Direccion</th>
                    <th>Telefono</th>
                    <th>Codigo Postal</th>
                    <th>NIF</th>
                    <th>Social Security</th>
                    <th>Ver</th>
                    <th>Editar</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody>
                {% for patient in patients %}
                   <tr>
                       <td>{{ patient.fullname }}</td>
                       <td>{{ patient.cardid }}</td>
                       <td>{{ patient.address }}</td>
                       <td>{{ patient.phone }}</td>
                       <td>{{ patient.zipcode }}</td>
                       <td>{{ patient.nif }}</td>
                       <td>{{ patient.socialsecurity }}</td>
                       <td>
                        <a href="/patient/{{ patient.id }}" class="btn btn-dark"><i class="fas fa-eye"></i></a>
                       </td>
                       <td> 
                        <a href="/patient/edit/{{ patient.id }}" class="btn btn-light"><i class="fas fa-edit"></i></a>
                       </td>
                       <td>
                        <a href="#" class="btn btn-danger delete-article" data-id="{{ patient.id }}"><i class="fas fa-trash-alt"></i></a>
                       </td>
                   </tr> 
                {% endfor %}
            </tbody>
        </table>
   {% else %}
    <div class="alert alert-dismissible alert-warning">
        {# <button type="button" class="close" data-dismiss="alert">&times;</button> #}
        <h4 class="alert-heading">Aviso</h4>
        <p class="mb-0">No Existen medicos actualmente</a>.</p>
    </div>
    <a href="/patient/new/" class="btn btn-primary float-right">Crear</a>
   {% endif %}
{% endblock %} 

{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}


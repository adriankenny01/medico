{% extends 'base.empty.html.twig' %}

{% block title %}Login!{% endblock %}

{% block body %}

    <form action="{{ path('login') }}" method="POST" class="form-signin text-center">
        <h1 class="mb-4">Login</h1>
        <img class="mb-4" src="{{ asset('img/user.svg') }}" alt="" width="72" height="72">
        
        {% if error %}
            <div class="alert alert-danger" role="alert">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <div class="form-group">
            <input class="form-control"  type="text" name="_username" value="{{ last_username}}" placeholder="Usuario">
        </div>
        <div class="form-group">
            <input class="form-control" type="password" name="_password"  placeholder="*****">
        </div>    
        <button class="btn btn-lg btn-primary btn-block mt-4" type="submit">Acceder</button>
    </form> 

{% endblock %}
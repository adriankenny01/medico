{% extends 'base.html.twig' %}

{% block title %} {{ 'Cita : ' ~ appointment.title }} {% endblock %}

{% block body %} 
<div class="content">
     <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                    <li class="breadcrumb-item"><a href="/appointment">Citas</a></li>
                    <li class="breadcrumb-item active">Mostrar</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">
                            {{ 'Cita : ' ~ appointment.title }}
                        </h4>
                        <p class="card-category">
                           {{ 'Paciente :' ~ appointment.patient.getFullName() }}
                        </p>
                        <img class="img-thumbnail float-right" width="125px" src ="{{ (appointment.patient.getPhoto()) ?  '/uploads/patient/' ~ appointment.patient.getPhoto() : asset('paper/assets/img/logo-small.png') }}" alt="Foto de perfil">
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            {% if appointment %}

                                <ul class="list-group">
                                  <li class="list-group-item"><strong>TÃ­tulo : </strong>{{ appointment.title }}</li>
                                  <li class="list-group-item"><strong>Simtomas : </strong>{{ appointment.symptoms }}</li>
                                  <li class="list-group-item"><strong>Medicamento : </strong>{{ appointment.medicaments }}</li>
                                  <li class="list-group-item"><strong>Enfermedad : </strong>{{ appointment.sick }}</li>
                                  <li class="list-group-item"><strong>Doctor : </strong>{{ appointment.medic.getFullName() }}</li>
                                  <li class="list-group-item"><strong>Fecha de cita : </strong>{{ appointment.start|date('d/F/Y') }}</li>
                                  <li class="list-group-item"><strong>Enfermedad : </strong>{{ appointment.sick }}</li>
                                </ul>
                                <a class="btn float-right" href="/appointment">Volver</a>  

                            {% else %}
                                <div class="alert alert-dismissible alert-warning">
                                    <button class="close" data-dismiss="alert" type="button">&times;</button>
                                    <h4 class="alert-heading">Aviso</h4>
                                    <p class="mb-0">No Existe esta cita.</p>
                                </div>
                                <a class="btn btn-primary float-right" href="/medic/category">Nuevo</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 
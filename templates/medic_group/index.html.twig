{% extends 'base.html.twig' %}

{% block title %} Grupo Medico {% endblock %}

{% block body %} 

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">
                        Grupo MÃ©dico
                    </h4>
                    <a class="btn btn-primary float-right" href="/group/new/">Nuevo</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        {% if groups %}

                            <table class="table data-show" id="medic_group">
                                    <thead class="text-primary">
                                        <tr>
                                            <th>Grupo</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for group1 in groups %}
                                        <tr>
                                            <td>{{ group1.name }}</td>
                                            <td>
                                                <a data-toggle="tooltip" data-placement="top" title="Ver" href="/group/{{ group1.id }}" class="btn btn-primary"><i class="fas fa-eye"></i></a>
                                                <a data-toggle="tooltip" data-placement="top" title="Editar" href="/group/edit/{{ group1.id }}" class="btn btn-light"><i class="fas fa-edit"></i></a>
                                                <a data-toggle="tooltip" data-placement="top" title="Eliminar" href="#" class="btn btn-danger delete-article" data-id="{{ group1.id }}"><i class="fas fa-trash-alt"></i></a>
                                            </td>
                                        </tr> 
                                        {% endfor %}
                                    </tbody>
                            </table>
                        {% else %}
                            <div class="alert alert-dismissible alert-warning">
                                <h4 class="alert-heading">Aviso</h4>
                                <p class="mb-0">No Existen grupos medicos actualmente</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %} 

{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}
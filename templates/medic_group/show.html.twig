{% extends 'base.html.twig' %}

{% block title %} {{ 'Grupo Meéco : ' ~ group.name }} {% endblock %}

{% block body %} 
<div class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">
                            {{ 'Grupo Medico : ' ~ group.name }}
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            {% if group %}

                                <ul class="list-group">
                                  <li class="list-group-item"><strong>Grupo Médico : </strong>{{ group.name }}</li>
                                </ul>
                                <a class="btn float-right" href="/group">Volver</a>  

                            {% else %}
                                <div class="alert alert-dismissible alert-warning">
                                    <button class="close" data-dismiss="alert" type="button">&times;</button>
                                    <h4 class="alert-heading">Aviso</h4>
                                    <p class="mb-0">No Existen grupos médicos actualmente.</p>
                                </div>
                                <a class="btn btn-primary float-right" href="/group/new">Nuevo</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 
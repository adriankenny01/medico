{% extends 'base.html.twig' %}

{% block title %} {{ 'Usuario' ~   user.name }} {% endblock %}

{% block body %} 

<div class="content">
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                    <li class="breadcrumb-item"><a href="/users"> Usuarios </a> </li>
                    <li class="breadcrumb-item active">Mostrar</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">
                            Usuarios
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            {% if user %}

                                <ul class="list-group">
                                  <li class="list-group-item"><strong>Nombre: </strong>{{ user.name}}</li>
                                  <li class="list-group-item"><strong>Usuario: </strong>{{ user.username }}</li>
                                  <li class="list-group-item"><strong>Email: </strong>{{ user.email }}</li>
                                  <li class="list-group-item"><strong>Rol: </strong>{{ (user.type) ? user.type : 'Administrador' }}</li>
                                </ul>
                                <a class="btn float-right" href="/user">Volver</a>  

                            {% else %}
                                <div class="alert alert-dismissible alert-warning">
                                    <button class="close" data-dismiss="alert" type="button">&times;</button>
                                    <h4 class="alert-heading">Aviso</h4>
                                    <p class="mb-0">No Existen Usuarios actualmente.</p>
                                </div>
                                <a class="btn btn-primary float-right" href="/schedule/new/">Nuevo</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %} 
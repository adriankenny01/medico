{% extends 'base.html.twig' %}

{% block title %} Listar Usuarios {% endblock %}

{% block body %} 

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">
                        Usuarios
                    </h4>
                    <p class="card-category">
                        Here is a subtitle for this table</p>
                    <a class="btn btn-primary float-right" href="/user/new/">Nuevo</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        {% if users %}

                            <table class="table data-show" id="users">
                                <thead class=" text-primary">
                                    <tr>
                                        <th>Nombre Completo</th>
                                        <th>Usuario</th>
                                        <th>Correo</th>
                                        <th>Estado</th>
                                        <th>Actiones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for user in users %}
                                    <tr>
                                        <td>{{ user.name }}</td>
                                        <td>{{ user.username }}</td>
                                        <td>{{ user.email }}</td>
                                        <td>{{ user.state }}</td>
                                        <td>
                                            <a href="/user/{{ user.id }}" class="btn btn-dark"><i class="fas fa-eye"></i></a>
                                            <a href="/user/edit/{{ user.id }}" class="btn btn-light"><i class="fas fa-edit"></i></a>
                                            <a href="#" class="btn btn-danger delete-article" data-id="{{ user.id }}"><i class="fas fa-trash-alt"></i></a>
                                        </td>
                                    </tr> 
                                {% endfor %}
                                </tbody>
                            </table>
                        {% else %}
                            <div class="alert alert-dismissible alert-warning">
                                <button class="close" data-dismiss="alert" type="button">&times;</button>
                                <h4 class="alert-heading">Aviso</h4>
                                <p class="mb-0">No existen usuarios registrados.</p>
                            </div>
                            <a class="btn btn-primary float-right" href="/user/new/">Nuevo</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %} 

{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}
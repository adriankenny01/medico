{% extends 'base.html.twig' %}

{% block title %} Perfil de {{ app.user.username }} {% endblock %}

{% block body %} 

    <div class="content">
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/">Inicio</a>
                    </li>
                    <li class="breadcrumb-item active">Perfil</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="card card-user">
                    <div class="image"
                        <img src="{{ asset('paper/assets/img/damir-bosnjak.jpg') }}" alt="...">
                    </div>
                    <div class="card-body">
                        <div class="author">
                            <a href="#">
                                <img alt="..." class="avatar border-gray" src="{{  asset('uploads/patient/') ~ app.user.photo }} ">
                                <h5 class="title">{{ app.user.name }}</h5>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card card-user">
                    <div class="card-header">
                        <h5 class="card-title">Perfil de usuario</h5>
                    </div>
                    <hr>
                    <div class="card-body" style="min-height: 0; ">
                        <p> <strong> Nombre Completo : </strong> {{ app.user.name }} </p>
                        <p> <strong> Usuario : </strong> {{ app.user.username }} </p>
                        <p> <strong> Email : </strong> {{ app.user.email }} </p>
                        <p> <strong> Rol : </strong> {{ (app.user.type) ? app.user.type : 'Administrador' }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %} 